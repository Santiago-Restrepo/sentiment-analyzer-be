{
  "rootDir": "src",
  "moduleFileExtensions": ["js", "json", "ts"],
  "testMatch": ["**/app.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/$1",
    "^@modules/(.*)$": "<rootDir>/modules/$1",
    "^@utils/(.*)$": "<rootDir>/utils/$1",
    "^@config/(.*)$": "<rootDir>/config/$1"
  },
  "testEnvironment": "node"
}
